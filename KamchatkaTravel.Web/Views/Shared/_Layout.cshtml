@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration;
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="image/x-icon" href="~/favicon.ico" rel="shortcut icon">
    <link type="Image/x-icon" href="~/favicon.ico" rel="icon">
    <link rel="stylesheet" href="~/css/main.css">
    <title>@ViewData["Title"]</title>
    <partial name="../Metrika/yandexMetrika.cshtml" />
</head>
<body>
    <div class="wrapper-page">

        <header class="header" data-header="main">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <img src="~/images/logo-3.png" class="logo__image" alt="">
            </a>
            <div class="header__burger" data-header="btn-menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <div class="header__menu" data-header="menu">
                <nav class="header__nav">
                    <ul class="header__nav-ul list-reset" data-header="nav-ul">
                        <li class="header__nav-li">
                            <a class="header__nav-link" data-smooth-scrolling="#tours" name="tours">Туры</a>
                        </li>
                        <li class="header__nav-li">
                            <a class="header__nav-link" data-smooth-scrolling="#about" name="about">О нас</a>
                        </li>
                        <li class="header__nav-li">
                            <a class="header__nav-link" data-smooth-scrolling="#reviews" name="reviews">Отзывы</a>
                        </li>
                    </ul>
                </nav>
                <div class="social-network">
                    <a href=@Configuration.GetSection("contacts")["telegram"] class="social-network__link link-reset">
                        <svg class="social-network__icon">
                            <use xlink:href="/icons/sprite-svg.svg#telegram" />
                        </svg>
                    </a>
                    <a href=@Configuration.GetSection("contacts")["whatsApp"] class="social-network__link link-reset">
                        <svg class="social-network__icon">
                            <use xlink:href="/icons/sprite-svg.svg#whatsapp" />
                        </svg>
                    </a>
                    <a href=@Configuration.GetSection("contacts")["instagram"] class="social-network__link link-reset">
                        <svg class="social-network__icon">
                            <use xlink:href="/icons/sprite-svg.svg#instagram" />
                        </svg>
                    </a>
                </div>
                <div class="header__block-links">
                    <a href="tel:@Configuration.GetSection("contacts")["tel"]" class="btn btn--size--md btn--theme--primary">
                        <span class="btn__text">@Configuration.GetSection("contacts")["phone"]</span>
                    </a>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer class="footer">
            <div class="main-container max-width footer__main-container-nav">
                <div class="footer__wrap-logo">
                    <a asp-controller="Home" asp-action="Index" class="logo">
                        <img src="~/images/logo-3.png" class="logo__image" alt="">
                    </a>
                    <div class="footer__contacts">
                        <a href="tel:@Configuration.GetSection("contacts")["tel"]" class="footer__link">@Configuration.GetSection("contacts")["phone"]</a>
                        <div class="social-network">
                            <a href=@Configuration.GetSection("contacts")["telegram"] class="social-network__link link-reset">
                                <svg class="social-network__icon">
                                    <use xlink:href="/icons/sprite-svg.svg#telegram" />
                                </svg>
                            </a>
                            <a href=@Configuration.GetSection("contacts")["whatsApp"] class="social-network__link link-reset">
                                <svg class="social-network__icon">
                                    <use xlink:href="/icons/sprite-svg.svg#whatsapp" />
                                </svg>
                            </a>
                            <a href=@Configuration.GetSection("contacts")["instagram"] class="social-network__link link-reset">
                                <svg class="social-network__icon">
                                    <use xlink:href="/icons/sprite-svg.svg#instagram" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="footer__wrap-nav">
                    <div class="footer__nav">
                        <span class="footer__title">туры</span>
                        <ul class="footer__nav-list list-reset">
                            <li class="footer__nav-li">
                                <a data-smooth-scrolling="#tours" class="footer__link" name="tours">Все туры</a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer__nav">
                        <span class="footer__title">команда</span>
                        <ul class="footer__nav-list list-reset">
                            <li class="footer__nav-li">
                                <a href="#" class="footer__link" data-smooth-scrolling="#about" name="about">О нас</a>
                            </li>
                            <li class="footer__nav-li">
                                <a href="#" class="footer__link" data-smooth-scrolling="#reviews" name="reviews">Отзывы</a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer__nav">
                        <span class="footer__title">Полезное</span>
                        <ul class="footer__nav-list list-reset">
                            <li class="footer__nav-li">
                                <a asp-controller="Home" asp-action="Privacy" class="footer__link">Политика конфиденциальности</a>
                            </li>
                            <li class="footer__nav-li">
                                <a href="#" data-smooth-scrolling="#faq" class="footer__link" name="faq">Частые вопросы</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="main-container max-width">
                <div class="footer__wrap-copy">
                    <span class="footer__copyright">&copy; Land in the ocean</span>
                    <a href="https://andreyfront.github.io/presentation/dist/index.html" class="footer__dev link-reset" target="_blank">Сделано Andrey FD</a>
                </div>
            </div>
        </footer>

        <div class="hystmodal modal m-success" id="m-success" aria-hidden="true">
            <div class="hystmodal__wrap">
                <div class="hystmodal__window" role="dialog" aria-modal="true">
                    <button data-hystclose class="hystmodal__close">
                        <svg class="modal__close-icon">
                            <use xlink:href="/icons/sprite-svg.svg#cross-dark" />
                        </svg>
                    </button>
                    <h2 id="#ModalTitle" class="title title--h2 title-reset">Заявка отправлена!</h2>
                    <span id="#ModalText" class="modal__subtitle">Мы свяжемся с вами в ближайшее время.</span>
                </div>
            </div>
        </div>

        <script src="~/js/libs.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/utils.js"></script>

    </div>
</body>
</html>