@model MainClientRequestModel;

@section Scripts
{
    <link href="~/css/ClientRequest.css" rel="stylesheet" />
}

<h1>Активные заявки</h1>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Имя </th>
            <th scope="col">Электронная почта</th>
            <th scope="col">Телефон</th>
            <th scope="col">Наименование тура</th>
            <th scope="col">Комментарий</th>

        </tr>
    </thead>
    <tbody>
        @{
            int cnt = 1;
            foreach(var req in Model.clientRequests)
            {
                <tr>
                    <th>@cnt</th>
                    <td>@req.FirstName</td>
                    <td>@req.Email</td>
                    <td>@req.Phone</td>
                    <td>@req.tourName</td>
                    <td>@req.comment</td>
                    <td class="hidden">@req.Id</td>
                </tr>
                cnt++;
            }
        }

    </tbody>
</table>