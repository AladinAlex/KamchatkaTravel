@using KamchatkaTravel.Application.Contracts.DTOs.DataDTOs;
@model AddTourViewModel;

@{
    ViewData["Title"] = "Создание видов";
}

<div class="container-fluid">

    <div class="col-12">
        <h3>Создание вида</h3>
        <form method="post">
            <ul class="list-group mb-2">

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Название:</b>
                        </div>
                        <div class="col-lg-10">
                            <input class="form-control w-100" asp-for="@Model.view.Name" name="view.Name"></input>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Описание:</b>
                        </div>
                        <div class="col-lg-10">
                            <textarea class="form-control w-100" asp-for="@Model.view.Description" name="view.Description" style="height: 125px"></textarea>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Картинка:</b>
                        </div>
                        <div class="form-file col-lg-3">
                            <input class="form-control" type="file" asp-for="@Model.view.Image" name="view.Image" accept="image/png, image/gif, image/jpeg">
                        </div>
                    </div>
                </li>

            </ul>
            <div>
                <button class="btn btn-dark" type="submit" asp-action="AddTourView" asp-controller="Tour" formenctype="multipart/form-data">
                    <span>Сохранить</span>
                </button>
            </div>
        </form>
    </div>

</div>