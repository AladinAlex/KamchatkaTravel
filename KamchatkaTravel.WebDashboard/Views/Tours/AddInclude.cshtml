@using KamchatkaTravel.WebDashboard.Models.ForAddView;
@model AddTourIncludeModel;

@{
    ViewData["Title"] = "Создание включено/не включено";
}

<div class="container-fluid">

    <div class="col-12">
        <h3>Создание включено/не включено</h3>
        <form method="post">
            <ul class="list-group mb-2">

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Порядок:</b>
                        </div>
                        <div class="col-lg-10">
                            <input class="form-control w-100" asp-for="@Model.include.Number" name="include.Number" type="number" />
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Текст:</b>
                        </div>
                        <div class="col-lg-10">
                            <input class="form-control w-100" asp-for="@Model.include.Text" name="include.Text" />
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Видимость:</b>
                        </div>
                        <div class="form-check form-switch col-lg-10">
                            <input class="form-check-input" type="checkbox" asp-for="@Model.include.isInclude" name="include.isInclude">
                            <label class="form-check-label">Включаемость</label>
                        </div>
                    </div>
                </li>


            </ul>
            <div>
                <button class="btn btn-dark" type="submit" asp-action="AddInclude" asp-controller="Tour" formenctype="multipart/form-data">
                    <span>Сохранить</span>
                </button>
                <input type="hidden" name="include.TourId" value="@Model.include.TourId" asp-for="@Model.include.TourId" />
            </div>
        </form>
    </div>

</div>