@model EditViewModel;

@{
    ViewData["Title"] = "Редактирование вида";
}

<div class="container-fluid">

    <div class="col-12">
        <h3>Редактирование вида</h3>
        <form method="post">
            <ul class="list-group mb-2">

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Название:</b>
                        </div>
                        <div class="col-lg-10">
                            <input class="form-control w-100" asp-for="@Model.view.Name" name="view.Name" />
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Описание:</b>
                        </div>
                        <div class="col-lg-10">
                            <textarea class="form-control w-100" asp-for="@Model.view.Description" name="view.Description" style="height: 125px">@Model.view.Description</textarea>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Картинка:</b>
                        </div>
                        <div class="form-file col-lg-3">
                            <input class="form-control" type="file" asp-for="@Model.view.ImageFile" name="view.ImageFile" accept="image/png, image/gif, image/jpeg">
                        </div>
                        <div class="col-lg-7">
                            @if (!string.IsNullOrWhiteSpace(Model.view.ImageUrl))
                            {
                                <img src=@Model.view.ImageUrl class="img-fluid mx-auto d-block" style="height: 200px">
                            }
                            else
                            {
                                <img class="img-fluid mx-auto d-block" style="height: 200px" alt="Вид">
                            }
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <b>Видимость:</b>
                        </div>
                        <div class="form-check form-switch col-lg-10">
                            <input class="form-check-input" type="checkbox" asp-for="@Model.view.Visible" name="view.Visible">
                            <label class="form-check-label">Видимость</label>
                        </div>
                    </div>
                </li>

            </ul>
            <div>
                <button class="btn btn-dark" type="submit" asp-action="EditView" asp-controller="Tour" formenctype="multipart/form-data">
                    <span>Сохранить</span>
                </button>
                <input type="hidden" name="view.Id" value="@Model.view.Id" asp-for="@Model.view.Id">
            </div>
        </form>
    </div>

</div>