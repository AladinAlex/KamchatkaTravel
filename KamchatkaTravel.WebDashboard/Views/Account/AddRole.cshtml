@model AddRoleModel;

<div style="margin-top: 10%">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col col-md-6">
            <h3 class="h3 mb-2">Добавление роли</h3>
            <form method="post">
                <input class="form-control mt-4" type="text" asp-for="@Model.Name" name="Name" />
                <input class="form-control mt-1" type="text" asp-for="@Model.NormalizedName" name="NormalizedName" />
                <button class="btn btn-dark btn-lg btn-block mt-3" asp-controller="Account" asp-action="CreateRole">Добавить</button>
            </form>
            @if (ViewData.ContainsKey("Error") && !String.IsNullOrEmpty(ViewData["Error"].ToString()))
            {
                <h3 class="h3 mb-1 text-danger">@ViewData["Error"].ToString()</h3>
            }
        </div>
    </div>
</div>   