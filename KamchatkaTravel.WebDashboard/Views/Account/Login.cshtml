@model SignInModel;

<div style="margin-top: 10%">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col col-md-6">
            <h3 class="h3 mb-2">Авторизация</h3>
            <form method="post">
                <input class="form-control mt-4" type="text" asp-for="@Model.Username" name="Username" />
                <input class="form-control mt-1" type="password" asp-for="@Model.Password" name="Password" />
                <div class="form-check">
                    <input type="checkbox" asp-for="@Model.RememberMe" name="RememberMe" id="RememberMeFlex" />
                    <label class="form-check-label" for="RememberMeFlex">Запомнить меня</label>
                </div>
                <button class="btn btn-dark btn-lg btn-block mt-3" asp-controller="Account" asp-action="SignIn">Войти</button>
            </form>
            @if (ViewData.ContainsKey("Error") && !String.IsNullOrEmpty(ViewData["Error"].ToString()))
            {
                <h3 class="h3 mb-1 text-danger">@ViewData["Error"].ToString()</h3>
            }
        </div>
    </div>
</div>   