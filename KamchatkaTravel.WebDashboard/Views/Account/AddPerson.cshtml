@model CreatePersonModel;

<div style="margin-top: 10%">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col col-md-6">
            <h3 class="h3 mb-2">Регистрация</h3>
            <form method="post">
                <input class="form-control mt-4" type="text" asp-for="@Model.Username" name="Username" />
                <input class="form-control mt-1" type="password" asp-for="@Model.Password" name="Password" />
                <input class="form-control mt-1" type="email" asp-for="@Model.Email" name="Email" />
                <input class="form-control mt-1" type="text" asp-for="@Model.Name" name="Name" />
                <input class="form-control mt-1" type="text" asp-for="@Model.Surname" name="Surname" />
                <button class="btn btn-dark btn-lg btn-block mt-3" asp-controller="Account" asp-action="CreatePerson">Создать</button>
            </form>
        </div>
    </div>
</div>   